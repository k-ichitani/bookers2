<head></head>
<body>
  <header></header>
  <main>
    <div class="container">
      <div class="row">
        <div>
          <h1>Editing Book</h1>
          <%= form_with model:@book, url:edit_book_path(@book.id), method: :patch do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body %>
            </div>
            <div class="form-group">
              <%= f.submit 'Update Book' %>
          <% end %>

          </div>
          <a class="show" href="">Show</a>
          <a class="back" href="/books">Back</a>
        </div>
      </div>
    </div>
  </main>
  <footer></footer>
</body>