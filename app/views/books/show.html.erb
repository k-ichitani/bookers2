<body>
<% if @newbook.errors.any? %>
  <%= @newbook.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @newbook.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <main>
    <div>
    <h2>User info</h2>
    <table>
      <tbody>
        <tr>
          <%= image_tag @user.get_profile_image(100,100) %>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    </div>
    <div>
      <% if @user == current_user %>
    <%= link_to edit_user_path(@user.id) do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= redirect_to user_path(@user.id) %>
  <% end %>
    </div>

    <div>
      <h2>New book</h2>
      <%= form_with model: @newbook do |f| %>
        <div>
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>


    <div>
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to @user.profile_image, user_path(@user.id) %>
                <%= link_to @book.title, book_path(@book.id) %>
                <%= @book.body %>
                <% if @book.user ==current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id) %>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>

  </main>
</body>