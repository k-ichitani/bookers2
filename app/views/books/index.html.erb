<body>

  <main>
    <h2>User info</h2>
    <table>
      <tbody>
        <tr>
          <%= image_tag @book.user.get_profile_image(100,100) %>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
      </tbody>
    </table>

    <div>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <div>
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
    </div>


    <div></div>
        <tbody>
          <% @books.each do |book| %>
          <div>
            <%= link_to books_path(book.id) do %>
            <% end %>
          </div>
        </tbody>
    </div>
    <% end %>

  </main>
</body>