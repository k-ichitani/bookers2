
<div class="container px-5 px-sm-0">

  <% if @newbook.errors.any? %>
    <%= @newbook.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @newbook.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <%= render 'shared/index', newbook: @newbook, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td id="favorite_buttons_<%= book.id %>">
            <%= render 'favorites/favorite-btn', book: book %>
            </td>
            <td><%= link_to "コメント数: #{book.book_comments.count}", book_path(book.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
