<body>
<% if @newbook.errors.any? %>
  <%= @newbook.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @newbook.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= flash[:notice] %>
</div>

  <main>
    <h2>User info</h2>
    <table>
      <tbody>
        <tr>
          <%= image_tag @user.get_profile_image(100,100) %>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div>
      <% if @user == current_user %>
    <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= redirect_to user_path(@user.id) %>
  <% end %>
    </div>


    <div>
      <h2>New book</h2>
      <%= form_with model: @newbook do |f| %>
        <div>
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book', class: 'btn btn-success' %>
        </div>
        <% end %>
    </div>


          <div>

          <h2>Books</h2>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
              <tr>
                <th><%= link_to @user.get_profile_image(80,80), user_path(@user.id) %></th>
                <th><%= link_to book.title, book_path(book.id) %></th>
                <th><%= book.body %></th>
              </tr>
            </tbody>
          </table>
          </div>
    <% end %>

  </main>
</body>