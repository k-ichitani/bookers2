<body>
<% if @newbook.errors.any? %>
  <%= @newbook.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @newbook.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
<table>
  <tbody>
    <tr>
      <%= image_tag @user.get_profile_image(100,100) %>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
  <% if @user == current_user %>
    <%= link_to edit_user_path(@user.id) do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>

<div>
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>

    <div>
      <h2>New book</h2>
      <%= form_with model: @newbook do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>

    <tbody>
      <div>
        <h2>Books</h2>
        <div>Title</div>
        <div>Opinion</div>
        <% @user.books.each do |books| %>
        <div>
          <%= link_to @user.profile_image, user_path(@user.id) %>
        <div>
          <%= link_to books.title, book_path(books.id) %>
        </div>
        <div>
          <%= books.body %>
        </div>
        </div>
        <% end %>
      </div>
    </tbody>
  </table>
</div>

</body>