<div class="container flex-column px-5 px-sm-0">
  
  <% if @newbook.errors.any? %>
    <%= @newbook.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @newbook.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="row">
    <%= render 'shared/show', newbook: @newbook, user: @user %>
  
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |books| %>
          <tr>
            <td><%= link_to user_path(@user.id) do %>
              <%= image_tag books.user.get_profile_image(80, 80) %>
            <% end %>
            </td>
            <td><%= link_to books.title, book_path(books.id) %></td>
            <td><%= books.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>