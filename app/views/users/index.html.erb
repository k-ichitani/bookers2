<head></head>
<body>

<h2>User info</h2>
<table>
  <tbody>
    <tr>
      <%= image_tag user.get_profile_image(100,100) %>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
  <% if @user == current_user %>
    <%= link_to edit_user_path(@books.id) %>
  <% end %>
</div>

<div>
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>

    <div>
      <h2>New book</h2>
      <%= form_with model: @newbook url: book_path, method: :post do |f| %>
        <div>
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
    </div>

    <div>
      <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag @user_id.get_profile_image(80,80) %></td>
          <td><%= @books.title %></td>
          <td><%= link_to "Show", book_path(@books.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </table>
</div>



</body>